<%= form_for(@timecard) do |t| %>
  <%= render 'shared/error_messages', object: t.object %>
  <div class="form-group">
    <div class="input-group date" id="datetimepicker1">
      <%= t.date_field :date, class: "form-control", "data-date-format" => "MM/DD/YYYY", value: Date.today.strftime('%m/%d/%Y') %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <div class="form-group">
    <%= t.label "Job" %>
    <%= t.select :job_id, options_for_select(@user.jobs.to_option), {include_blank: 'None'} %>
  </div>
  <div class="form-group">
    <%= t.label "Phase" %>
    <%= render 'shared/timecard_phase_selection', t: t %>
  </div>
  <div class="form-group">
    <%= t.label "Craft/Class" %>
    <%= t.select :craft_class_id, options_for_select([['Welder', 1],['Pipefitter',2],['Shop Help',3]]), {include_blank: "None"} %>
  </div>
  <div class="form-group">
    <%= t.label "Equipment/Vehicle" %>
    <%= t.select :equipment_id, options_for_select([['No Vehicle',0],['My Rig', 1],['91 Ford 250',2],['99 Chevy 2500',3],['00 Dodge 3500',3]]) %>
  </div>
  <div class="form-group">
    <%= t.label "Hours" %>
    <%= t.number_field :hours, placeholder: 8, step: 0.01 %>
  </div>
  <%= t.submit "Get Paid!", class: "btn btn-large btn-primary" %>
<% end %>
