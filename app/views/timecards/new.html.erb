<% provide(:title, 'Enter Time') %>

<h1 class="center"><%= @user.name %></h1>

<% if signed_in? %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'shared/timecard_form' %>
    </div>
  </div>
  <div class="row">
    <h1 class="center" id="new_timecard_hours"><%= @timecards.map(&:hours).sum %></h1>
    <p class="center">hours so far this week</p>

  </div>

<% else %>
	<p class="center">This is the timecard app you've always wanted</p>
	<p>Created by <a href="www.silvertreksystems.com">Silvertrek Systems</a></p>
<% end %>
